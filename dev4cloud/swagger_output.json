{
  "swagger": "2.0",
  "info": {
    "description": "API to upload and manage documents",
    "version": "1.0.0",
    "title": "Document API"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "tags": [
    {
      "name": "documents",
      "description": "Document management"
    }
  ],
  "paths": {
    "/documents/": {
      "post": {
        "tags": [
          "documents"
        ],
        "summary": "Create a new document",
        "description": "Upload a new document with PDF file",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "pdf",
            "type": "file",
            "description": "The PDF file to upload",
            "required": true
          },
          {
            "in": "formData",
            "name": "userId",
            "type": "string",
            "description": "User ID",
            "required": true
          },
          {
            "in": "formData",
            "name": "conversationId",
            "type": "string",
            "description": "Conversation ID",
            "required": true
          },
          {
            "in": "formData",
            "name": "author",
            "type": "string",
            "description": "Author",
            "required": true
          },
          {
            "in": "formData",
            "name": "title",
            "type": "string",
            "description": "Title",
            "required": true
          },
          {
            "in": "formData",
            "name": "year",
            "type": "string",
            "description": "Year",
            "required": true
          },
          {
            "in": "formData",
            "name": "url",
            "type": "string",
            "description": "URL",
            "required": false
          },
          {
            "in": "formData",
            "name": "isbn",
            "type": "string",
            "description": "ISBN",
            "required": false
          },
          {
            "in": "formData",
            "name": "type",
            "type": "string",
            "description": "Type",
            "required": true
          },
          {
            "in": "formData",
            "name": "tags",
            "type": "string",
            "description": "Tags",
            "required": false
          },
          {
            "in": "formData",
            "name": "apiKey",
            "type": "string",
            "description": "API Key",
            "required": true
          }
        ],
        "responses": {
          "201": {
            "description": "Document created and sent successfully"
          },
          "500": {
            "description": "Error"
          }
        }
      }
    }
  }
}